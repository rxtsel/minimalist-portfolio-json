---
import Section from "../Section.astro"
import { skills } from "@cv"
---

<Section title="Habilidades">
  <ul>
     {
      skills
        .slice()
        .sort((a, b) => a.name.localeCompare(b.name))
        .map(({ name }) => {
          return (
            <li>
              <span>{name}</span>
            </li>
          )
        })
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    align-items: center;
    background: #eee;
    border-radius: 6px;
    color: black;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
